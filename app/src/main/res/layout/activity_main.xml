<?xml version="1.0" encoding="utf-8"?>

<!-- TODO: Need layout for Main Activity page -->

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    tools:context="com.netfricks.wafflepirate.MainActivity"
    android:orientation="horizontal">

    <!--<ListView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="match_parent"-->
        <!--android:id="@+id/mainListView">-->
    <!--</ListView>-->

    <Button
        android:id="@+id/buttonViewActivityDriving"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Driving Settings"
        android:onClick="viewActivityDriving" />

    <Button
        android:id="@+id/buttonViewActivityCalendar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:text="Calendar Settings"
        android:onClick="viewActivityCalendar"
        android:layout_below="@+id/buttonViewActivityDriving" />

    <TextView
        android:id="@+id/textViewAppVersion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/app_version"
        android:textSize="14sp"
        android:paddingTop="16dp"
        android:textAlignment="center"
        android:layout_below="@+id/buttonViewActivityCalendar" />

</RelativeLayout>
